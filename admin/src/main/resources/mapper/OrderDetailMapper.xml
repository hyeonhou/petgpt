<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mc.app.repository.OrderDetailRepository">

    <select id="findAll" resultType="com.mc.app.dto.OrderDetail">
        SELECT * FROM order_detail
    </select>

    <select id="findById" parameterType="int" resultType="com.mc.app.dto.OrderDetail">
        SELECT * FROM order_detail WHERE orderdetail_key = #{id}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM order_detail
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE FROM order_detail WHERE orderdetail_key = #{id}
    </delete>
</mapper>


